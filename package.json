{
	"name": "screenshot-tracker",
	"version": "1.0.0",
	"description": "Screenshot tracking tool using electron/chromium and puppeteer",
	"license": "MIT",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nomadinteractive/screenshot-tracker"
	},
	"author": {
		"name": "Nomad Interactive",
		"email": "hello@nomadinteractive.co",
		"url": "https://nomadinteractive.co"
	},
	"engines": {
		"node": ">=12.0.0",
		"npm": ">=5.0.0",
		"yarn": ">=1.0.0"
	},
	"homepage": "",
	"main": "./main.js",
	"scripts": {
		"start": "npm run env:dev -- webpack-dev-server",
		"build": "npm run env:prod -- webpack",
		"prod": "npm run build && electron --noDevServer .",
		"package": "npm run build",
		"package:all": "npm run build",
		"package:nosign": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run package",
		"test": "jest -u",
		"lint": "eslint ./src",
		"docs": "jsdoc -r ./src -d docs --verbose",
		"env:dev": "cross-env NODE_ENV=development",
		"env:prod": "cross-env NODE_ENV=production",
		"build:clean": "rimraf -rf dist",
		"build:copy": "copyfiles -u 1 public/* public/**/* dist -e public/index.html",
		"prebuild": "npm run build:clean && npm run build:copy",
		"prepackage:all": "rimraf -rf release",
		"postpackage": "electron-builder build",
		"postpackage:all": "electron-builder build -mwl",
		"check": "nomad-codecheck ./src",
		"clean": "npm run lint && npm run check"
	},
	"dependencies": {
		"@sentry/electron": "^1.3.0",
		"antd": "^3.16.3",
		"chrome-launcher": "^0.13.4",
		"classnames": "^2.2.6",
		"darkmode-js": "^1.5.5",
		"electron-is-dev": "^1.1.0",
		"electron-store": "^5.1.0",
		"electron-window-state": "^5.0.3",
		"lighthouse": "^6.5.0",
		"moment": "^2.29.4",
		"prop-types": "^15.7.2",
		"puppeteer-core": "^2.1.1",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-hot-loader": "^4.12.19",
		"react-image-lightbox": "^5.1.1",
		"react-redux": "^7.2.0",
		"react-router-dom": "^5.0.0",
		"redux": "^4.0.5",
		"redux-thunk": "^2.3.0",
		"request": "^2.88.2",
		"slugify": "^1.4.0",
		"terser-webpack-plugin": "^2.3.4"
	},
	"devDependencies": {
		"electron": "^8.1.1",
		"@babel/core": "^7.4.3",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-transform-modules-commonjs": "^7.4.3",
		"@babel/plugin-transform-runtime": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@babel/preset-react": "^7.0.0",
		"@babel/register": "^7.4.0",
		"@commitlint/cli": "^8.2.0",
		"@hot-loader/react-dom": "^16.8.6",
		"@nomadinteractive/commitlint-config": "1.0.3",
		"@nomadinteractive/eslint-config": "0.1.0",
		"@nomadinteractive/nomad-codecheck": "1.0.37",
		"antd-scss-theme-plugin": "^1.0.7",
		"babel-eslint": "^10.0.1",
		"babel-jest": "^24.7.1",
		"babel-loader": "^8.0.5",
		"babel-plugin-import": "^1.11.0",
		"babel-plugin-root-import": "^6.1.0",
		"babel-plugin-transform-react-remove-prop-types": "^0.4.24",
		"babili-webpack-plugin": "^0.1.2",
		"brotli-webpack-plugin": "^1.1.0",
		"copyfiles": "^2.1.0",
		"cross-env": "^5.2.0",
		"css-hot-loader": "^1.4.4",
		"css-loader": "^2.1.1",
		"electron-builder": "^22.4.1",
		"electron-notarize": "^0.2.1",
		"enzyme": "^3.9.0",
		"enzyme-adapter-react-16": "^1.12.1",
		"enzyme-to-json": "^3.3.5",
		"eslint": "^5.16.0",
		"eslint-loader": "^2.1.2",
		"eslint-plugin-react": "^7.12.4",
		"file-loader": "^3.0.1",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^3.0.9",
		"jest": "^24.7.1",
		"jest-cli": "^24.7.1",
		"jsdoc": "^3.5.5",
		"less": "^3.9.0",
		"less-loader": "^4.1.0",
		"mini-css-extract-plugin": "^0.6.0",
		"node-sass": "^4.11.0",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"postcss-import": "^12.0.1",
		"postcss-loader": "^3.0.0",
		"postcss-nested": "^4.1.2",
		"postcss-preset-env": "^6.6.0",
		"postcss-pxtorem": "^4.0.1",
		"rimraf": "^2.6.3",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"thread-loader": "^2.1.2",
		"uglifyjs-webpack-plugin": "^2.1.2",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.0",
		"webpack-dev-server": "^3.3.1",
		"webpack-merge": "^4.2.1"
	},
	"commitlint": {
		"extends": [
			"@nomadinteractive/commitlint-config"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run clean",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"build": {
		"productName": "Screenshot Tracker",
		"appId": "co.nomadinteractive.screenshot-tracker",
		"afterSign": "scripts/notarize.js",
		"files": [
			"dist",
			"main.js",
			"storage.js",
			"sentry.js",
			"package.json"
		],
		"mac": {
			"icon": "./public/appicon_512.png",
			"target": "pkg",
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist"
		},
		"win": {
			"icon": "./public/appicon_256.png",
			"target": [
				"nsis",
				"msi"
			]
		},
		"linux": {
			"target": [
				"deb",
				"rpm",
				"snap",
				"AppImage"
			],
			"category": "Development"
		},
		"directories": {
			"buildResources": "public",
			"output": "release"
		}
	},
	"jest": {
		"snapshotSerializers": [
			"enzyme-to-json/serializer"
		],
		"setupFiles": [
			"raf/polyfill",
			"<rootDir>/@test/config/setupTests.js"
		],
		"moduleNameMapper": {
			"^.+\\.(css|less|scss)$": "babel-jest",
			"^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/@test/config/fileMock.js",
			"^components$": "<rootDir>/@test/config/componentsMock.js"
		},
		"moduleDirectories": [
			"src",
			"@test/src",
			"node_modules"
		]
	}
}
